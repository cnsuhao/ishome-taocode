<?xml version='1.0' encoding='UTF-8' ?> 
<!DOCTYPE mapper
    PUBLIC '-//mybatis.org//DTD Dao 3.0//EN' 
    'http://mybatis.org/dtd/mybatis-3-mapper.dtd' >
<!-- 岗位内容设置表 -->
<!-- 需要和DAO保持完全路径一致 -->
<mapper namespace='com.mcookies.qxy.common.SDutyContent.SDutyContentDao'>
    <!-- 表字段信息  -->
    <sql id='tableColumns'>
        id,sid,duty_id,content,start_time,end_time,is_use,create_time,creator,update_time,updator
    </sql>

    <!-- 根据条件更新所有记录 -->
    <update id='doUpdateAll' parameterType='SDutyContentDBO'>
        UPDATE s_duty_content SET update_time = #{updateTime} <!-- 更新时间、更新者 -->
        <if test=" id != null "><!-- 自增id -->
            ,id = #{id}
        </if>
        <if test=" sid != null "><!-- 学校id -->
            ,sid = #{sid}
        </if>
        <if test=" dutyId != null "><!-- 岗位id -->
            ,duty_id = #{dutyId}
        </if>
        <if test=" content != null "><!-- 岗位职责 -->
            ,content = #{content}
        </if>
        <if test=" startTime != null "><!-- 开始时间 -->
            ,start_time = #{startTime}
        </if>
        <if test=" endTime != null "><!-- 结束时间 -->
            ,end_time = #{endTime}
        </if>
        <if test=" isUse != null "><!-- 是否启用 -->
            ,is_use = #{isUse}
        </if>
        <if test=" createTime != null "><!-- 创建时间 -->
            ,create_time = #{createTime}
        </if>
        <if test=" creator != null "><!-- 创建者 -->
            ,creator = #{creator}
        </if>
        <if test=" updator != null "><!-- 最后更新者 -->
            ,updator = #{updator}
        </if>
        WHERE 1 = 1 
            <if test=" id != null "><!-- 自增id -->
                AND id = #{id}
            </if>
            <if test=" sid != null "><!-- 学校id -->
                AND sid = #{sid}
            </if>
            <if test=" dutyId != null "><!-- 岗位id -->
                AND duty_id = #{dutyId}
            </if>
            <if test=" content != null "><!-- 岗位职责 -->
                AND content = #{content}
            </if>
            <if test=" startTime != null "><!-- 开始时间 -->
                AND start_time = #{startTime}
            </if>
            <if test=" endTime != null "><!-- 结束时间 -->
                AND end_time = #{endTime}
            </if>
            <if test=" isUse != null "><!-- 是否启用 -->
                AND is_use = #{isUse}
            </if>
            <if test=" createTime != null "><!-- 创建时间 -->
                AND create_time = #{createTime}
            </if>
            <if test=" creator != null "><!-- 创建者 -->
                AND creator = #{creator}
            </if>
            <if test=" updateTime != null "><!-- 更新时间 -->
                AND update_time = #{updateTime}
            </if>
            <if test=" updator != null "><!-- 最后更新者 -->
                AND updator = #{updator}
            </if>
    </update>
    <!-- 查询分页数据信息  -->
    <select id='doSelectPage' parameterType='SDutyContentDBO' resultType='SDutyContentDBO'>
        SELECT <include refid='tableColumns'/> FROM s_duty_content
        WHERE 1 = 1 
        <if test=" id != null "><!-- 自增id -->
            AND id = #{id}
        </if>
        <if test=" sid != null "><!-- 学校id -->
            AND sid = #{sid}
        </if>
        <if test=" dutyId != null "><!-- 岗位id -->
            AND duty_id = #{dutyId}
        </if>
        <if test=" content != null "><!-- 岗位职责 -->
            AND content = #{content}
        </if>
        <if test=" startTime != null "><!-- 开始时间 -->
            AND start_time = #{startTime}
        </if>
        <if test=" endTime != null "><!-- 结束时间 -->
            AND end_time = #{endTime}
        </if>
        <if test=" isUse != null "><!-- 是否启用 -->
            AND is_use = #{isUse}
        </if>
        <if test=" createTime != null "><!-- 创建时间 -->
            AND create_time = #{createTime}
        </if>
        <if test=" creator != null "><!-- 创建者 -->
            AND creator = #{creator}
        </if>
        <if test=" updateTime != null "><!-- 更新时间 -->
            AND update_time = #{updateTime}
        </if>
        <if test=" updator != null "><!-- 最后更新者 -->
            AND updator = #{updator}
        </if>
    </select>

    <!-- 插入一条数据 -->
    <insert id='doInsert' parameterType='SDutyContentDBO'>
        INSERT INTO s_duty_content
          ( <include refid='tableColumns'/>) 
        VALUES 
          ( #{id},#{sid},#{dutyId},#{content},#{startTime},#{endTime},#{isUse},#{createTime},#{creator},#{updateTime},#{updator} )
    </insert>
    <!-- 修改一条数据 -->
    <update id='doUpdate' parameterType='SDutyContentDBO'>
        UPDATE s_duty_content SET update_time = #{updateTime} <!-- 更新时间、更新者 -->
        <if test=" id != null "><!-- 自增id -->
            ,id = #{id}
        </if>
        <if test=" sid != null "><!-- 学校id -->
            ,sid = #{sid}
        </if>
        <if test=" dutyId != null "><!-- 岗位id -->
            ,duty_id = #{dutyId}
        </if>
        <if test=" content != null "><!-- 岗位职责 -->
            ,content = #{content}
        </if>
        <if test=" startTime != null "><!-- 开始时间 -->
            ,start_time = #{startTime}
        </if>
        <if test=" endTime != null "><!-- 结束时间 -->
            ,end_time = #{endTime}
        </if>
        <if test=" isUse != null "><!-- 是否启用 -->
            ,is_use = #{isUse}
        </if>
        <if test=" createTime != null "><!-- 创建时间 -->
            ,create_time = #{createTime}
        </if>
        <if test=" creator != null "><!-- 创建者 -->
            ,creator = #{creator}
        </if>
        <if test=" updator != null "><!-- 最后更新者 -->
            ,updator = #{updator}
        </if>
        WHERE 1 = 1 
            <if test=" id != null "><!-- 自增id -->
                AND id = #{id}
            </if>
    </update>
    <!-- 逻辑删除一条数据 -->
    <delete id='toDelete' parameterType='SDutyContentDBO'>
        UPDATE s_duty_content SET ddd='1', update_time = #{updateTime}, uu2 = #{uu2} WHERE update_time = #{updateTime}
            <if test=" id != null "><!-- 自增id -->
                AND id = #{id}
            </if>
    </delete>
    <!-- 物理删除一条数据 -->
    <delete id='doDelete' parameterType='SDutyContentDBO'>
        DELETE FROM s_duty_content WHERE update_time = #{updateTime}
            <if test=" id != null "><!-- 自增id -->
                AND id = #{id}
            </if>
    </delete>
    <!-- 查询一条数据  -->
    <select id='doRead' parameterType='SDutyContentDBO' resultType='SDutyContentDBO'>
        SELECT <include refid='tableColumns'/> FROM s_duty_content WHERE 1 = 1
            <if test=" id != null "><!-- 自增id -->
                AND id = #{id}
            </if>
    </select>
    <!-- 通过dutyIds查数据  -->
    <select id='doSelectByDutyIds' parameterType='java.util.List' resultType='SDutyContentDBO'>
        SELECT <include refid='tableColumns'/> FROM s_duty_content WHERE 1 = 1
                AND duty_id in
            <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
				#{item}
			</foreach>
    </select>

</mapper>
