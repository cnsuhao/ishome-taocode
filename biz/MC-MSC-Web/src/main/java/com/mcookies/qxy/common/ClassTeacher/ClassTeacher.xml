<?xml version='1.0' encoding='UTF-8' ?> 
<!DOCTYPE mapper
    PUBLIC '-//mybatis.org//DTD Dao 3.0//EN' 
    'http://mybatis.org/dtd/mybatis-3-mapper.dtd' >
<!-- 班级教师关联表 -->
<!-- 需要和DAO保持完全路径一致 -->
<mapper namespace='com.mcookies.qxy.common.ClassTeacher.ClassTeacherDao'>
    <!-- 表字段信息  -->
    <sql id='tableColumns'>
        id,sid,cid,course_id,tid,is_leader,is_use,create_time,creator,update_time,updator
    </sql>

    <!-- 根据条件更新所有记录 -->
    <update id='doUpdateAll' parameterType='ClassTeacherDBO'>
        UPDATE class_teacher SET update_time = #{updateTime} <!-- 更新时间、更新者 -->
        <if test=" id != null "><!-- 自增id -->
            ,id = #{id}
        </if>
        <if test=" sid != null "><!-- 学校id -->
            ,sid = #{sid}
        </if>
        <if test=" cid != null "><!-- 班级id -->
            ,cid = #{cid}
        </if>
        <if test=" courseId != null "><!-- 课程id -->
            ,course_id = #{courseId}
        </if>
        <if test=" tid != null "><!-- 教师id -->
            ,tid = #{tid}
        </if>
        <if test=" isLeader != null "><!-- 是否为班主任 -->
            ,is_leader = #{isLeader}
        </if>
        <if test=" isUse != null "><!-- 是否启用 -->
            ,is_use = #{isUse}
        </if>
        <if test=" createTime != null "><!-- 创建时间 -->
            ,create_time = #{createTime}
        </if>
        <if test=" creator != null "><!-- 创建者 -->
            ,creator = #{creator}
        </if>
        <if test=" updator != null "><!-- 最后更新者 -->
            ,updator = #{updator}
        </if>
        WHERE 1 = 1 
            <if test=" cid != null "><!-- 班级id -->
                AND cid = #{cid}
            </if>
            <if test=" tid != null "><!-- 教师id -->
                AND tid = #{tid}
            </if>
            <if test="sid !=null">
            	AND sid = #{sid}
            </if>
    </update>
    <!-- 查询分页数据信息  -->
    <select id='doSelectPage' parameterType='ClassTeacherDBO' resultType='ClassTeacherDBO'>
        SELECT <include refid='tableColumns'/> FROM class_teacher
        WHERE 1 = 1 
        <if test=" id != null "><!-- 自增id -->
            AND id = #{id}
        </if>
        <if test=" sid != null "><!-- 学校id -->
            AND sid = #{sid}
        </if>
        <if test=" cid != null "><!-- 班级id -->
            AND cid = #{cid}
        </if>
        <if test=" courseId != null "><!-- 课程id -->
            AND course_id = #{courseId}
        </if>
        <if test=" tid != null "><!-- 教师id -->
            AND tid = #{tid}
        </if>
        <if test=" isLeader != null "><!-- 是否为班主任 -->
            AND is_leader = #{isLeader}
        </if>
        <if test=" isUse != null "><!-- 是否启用 -->
            AND is_use = #{isUse}
        </if>
        <if test=" createTime != null "><!-- 创建时间 -->
            AND create_time = #{createTime}
        </if>
        <if test=" creator != null "><!-- 创建者 -->
            AND creator = #{creator}
        </if>
        <if test=" updateTime != null "><!-- 更新时间 -->
            AND update_time = #{updateTime}
        </if>
        <if test=" updator != null "><!-- 最后更新者 -->
            AND updator = #{updator}
        </if>
    </select>

    <!-- 插入一条数据 -->
    <insert id='doInsert' parameterType='ClassTeacherDBO'>
        INSERT INTO class_teacher
          ( <include refid='tableColumns'/>) 
        VALUES 
          ( #{id},#{sid},#{cid},#{courseId},#{tid},#{isLeader},#{isUse},#{createTime},#{creator},#{updateTime},#{updator} )
    </insert>
    <!-- 修改一条数据 -->
    <update id='doUpdate' parameterType='ClassTeacherDBO'>
        UPDATE class_teacher SET update_time = #{updateTime} <!-- 更新时间、更新者 -->
        <if test=" id != null "><!-- 自增id -->
            ,id = #{id}
        </if>
        <if test=" sid != null "><!-- 学校id -->
            ,sid = #{sid}
        </if>
        <if test=" cid != null "><!-- 班级id -->
            ,cid = #{cid}
        </if>
        <if test=" courseId != null "><!-- 课程id -->
            ,course_id = #{courseId}
        </if>
        <if test=" tid != null "><!-- 教师id -->
            ,tid = #{tid}
        </if>
        <if test=" isLeader != null "><!-- 是否为班主任 -->
            ,is_leader = #{isLeader}
        </if>
        <if test=" isUse != null "><!-- 是否启用 -->
            ,is_use = #{isUse}
        </if>
        <if test=" createTime != null "><!-- 创建时间 -->
            ,create_time = #{createTime}
        </if>
        <if test=" creator != null "><!-- 创建者 -->
            ,creator = #{creator}
        </if>
        <if test=" updator != null "><!-- 最后更新者 -->
            ,updator = #{updator}
        </if>
        WHERE 1 = 1 
            <if test=" id != null "><!-- 自增id -->
                AND id = #{id}
            </if>
    </update>
    <!-- 逻辑删除一条数据 -->
    <delete id='toDelete' parameterType='ClassTeacherDBO'>
        UPDATE class_teacher SET ddd='1', update_time = #{updateTime}, uu2 = #{uu2} WHERE update_time = #{updateTime}
            <if test=" id != null "><!-- 自增id -->
                AND id = #{id}
            </if>
    </delete>
    <!-- 物理删除一条数据 -->
    <delete id='doDelete' parameterType='ClassTeacherDBO'>
        DELETE FROM class_teacher WHERE update_time = #{updateTime}
            <if test=" id != null "><!-- 自增id -->
                AND id = #{id}
            </if>
    </delete>
    <!-- 查询一条数据  -->
    <select id='doRead' parameterType='ClassTeacherDBO' resultType='ClassTeacherDBO'>
        SELECT <include refid='tableColumns'/> FROM class_teacher WHERE 1 = 1
            <if test=" id != null "><!-- 自增id -->
                AND id = #{id}
            </if>
    </select>
    <!-- 通过cid查询班级课程  -->
    <select id='findByCid' parameterType='ClassTeacherDBO' 
    		resultType='com.mcookies.qxy.common.ClassTeacher.ClassTeacherPVO'>
        SELECT
        a.id,
        a.course_id,
        b.course_name,
        a.tid,
        c.teacher_name,
        c.phone,
        c.email,
        a.is_leader
		FROM class_teacher a
		LEFT JOIN s_course b ON a.course_id = b.course_id
		LEFT JOIN u_teacher c ON a.tid = c.tid
		WHERE a.cid = #{cid}
    </select>

</mapper>
