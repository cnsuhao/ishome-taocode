<!-- 学生家长关联表 -->
<!-- 需要和DAO保持完全路径一致 -->
<mapper namespace='com.mcookies.qxy.common.UStudentParent.UStudentParentDao'>
    <!-- 表字段信息  -->
    <sql id='tableColumns'>
        id,parent_id,role,sid,student_id,is_default,is_use,create_time,creator,update_time,updator
    </sql>

    <!-- 根据条件更新所有记录 -->
    <update id='doUpdateAll' parameterType='UStudentParentDBO'>
        UPDATE u_student_parent SET update_time = #{updateTime} <!-- 更新时间、更新者 -->
