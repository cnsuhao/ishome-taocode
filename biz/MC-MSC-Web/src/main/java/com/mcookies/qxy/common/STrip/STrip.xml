<?xml version='1.0' encoding='UTF-8' ?> 
<!DOCTYPE mapper
    PUBLIC '-//mybatis.org//DTD Dao 3.0//EN' 
    'http://mybatis.org/dtd/mybatis-3-mapper.dtd' >
<!-- 行程表 -->
<!-- 需要和DAO保持完全路径一致 -->
<mapper namespace='com.mcookies.qxy.common.STrip.STripDao'>
    <!-- 表字段信息  -->
    <sql id='tableColumns'>
        trip_id,term_id,sid,tid,content,date,is_use,create_time,creator,update_time,updator
    </sql>

    <!-- 根据条件更新所有记录 -->
    <update id='doUpdateAll' parameterType='STripDBO'>
        UPDATE s_trip SET update_time = #{updateTime} <!-- 更新时间、更新者 -->
        <if test=" tripId != null "><!-- 自增id -->
            ,trip_id = #{tripId}
        </if>
        <if test=" termId != null "><!-- 学期id -->
            ,term_id = #{termId}
        </if>
        <if test=" sid != null "><!-- 学校id -->
            ,sid = #{sid}
        </if>
        <if test=" tid != null "><!-- 教师id -->
            ,tid = #{tid}
        </if>
        <if test=" content != null "><!-- 内容 -->
            ,content = #{content}
        </if>
        <if test=" date != null "><!-- 日期 -->
            ,date = #{date}
        </if>
        <if test=" isUse != null "><!-- 是否启用 -->
            ,is_use = #{isUse}
        </if>
        <if test=" createTime != null "><!-- 创建时间 -->
            ,create_time = #{createTime}
        </if>
        <if test=" creator != null "><!-- 创建者 -->
            ,creator = #{creator}
        </if>
        <if test=" updator != null "><!-- 最后更新者 -->
            ,updator = #{updator}
        </if>
        WHERE 1 = 1 
            <if test=" tripId != null "><!-- 自增id -->
                AND trip_id = #{tripId}
            </if>
            <if test=" termId != null "><!-- 学期id -->
                AND term_id = #{termId}
            </if>
            <if test=" sid != null "><!-- 学校id -->
                AND sid = #{sid}
            </if>
            <if test=" tid != null "><!-- 教师id -->
                AND tid = #{tid}
            </if>
            <if test=" content != null "><!-- 内容 -->
                AND content = #{content}
            </if>
            <if test=" date != null "><!-- 日期 -->
                AND date = #{date}
            </if>
            <if test=" isUse != null "><!-- 是否启用 -->
                AND is_use = #{isUse}
            </if>
            <if test=" createTime != null "><!-- 创建时间 -->
                AND create_time = #{createTime}
            </if>
            <if test=" creator != null "><!-- 创建者 -->
                AND creator = #{creator}
            </if>
            <if test=" updateTime != null "><!-- 更新时间 -->
                AND update_time = #{updateTime}
            </if>
            <if test=" updator != null "><!-- 最后更新者 -->
                AND updator = #{updator}
            </if>
    </update>
    <!-- 查询分页数据信息  -->
    <select id='doSelectPage' parameterType='STripDBO' resultType='STripDBO'>
        SELECT <include refid='tableColumns'/> FROM s_trip
        WHERE 1 = 1 
        <if test=" tripId != null "><!-- 自增id -->
            AND trip_id = #{tripId}
        </if>
        <if test=" termId != null "><!-- 学期id -->
            AND term_id = #{termId}
        </if>
        <if test=" sid != null "><!-- 学校id -->
            AND sid = #{sid}
        </if>
        <if test=" tid != null "><!-- 教师id -->
            AND tid = #{tid}
        </if>
        <if test=" content != null "><!-- 内容 -->
            AND content = #{content}
        </if>
        <if test=" date != null "><!-- 日期 -->
            AND date = #{date}
        </if>
        <if test=" isUse != null "><!-- 是否启用 -->
            AND is_use = #{isUse}
        </if>
    </select>

    <!-- 插入一条数据 -->
    <insert id='doInsert' parameterType='STripDBO'>
        INSERT INTO s_trip
          ( <include refid='tableColumns'/>) 
        VALUES 
          ( #{tripId},#{termId},#{sid},#{tid},#{content},#{date},#{isUse},#{createTime},#{creator},#{updateTime},#{updator} )
    </insert>
    <!-- 修改一条数据 -->
    <update id='doUpdate' parameterType='STripDBO'>
        UPDATE s_trip SET update_time = #{updateTime} <!-- 更新时间、更新者 -->
        <if test=" tripId != null "><!-- 自增id -->
            ,trip_id = #{tripId}
        </if>
        <if test=" termId != null "><!-- 学期id -->
            ,term_id = #{termId}
        </if>
        <if test=" sid != null "><!-- 学校id -->
            ,sid = #{sid}
        </if>
        <if test=" tid != null "><!-- 教师id -->
            ,tid = #{tid}
        </if>
        <if test=" content != null "><!-- 内容 -->
            ,content = #{content}
        </if>
        <if test=" date != null "><!-- 日期 -->
            ,date = #{date}
        </if>
        <if test=" isUse != null "><!-- 是否启用 -->
            ,is_use = #{isUse}
        </if>
        <if test=" createTime != null "><!-- 创建时间 -->
            ,create_time = #{createTime}
        </if>
        <if test=" creator != null "><!-- 创建者 -->
            ,creator = #{creator}
        </if>
        <if test=" updator != null "><!-- 最后更新者 -->
            ,updator = #{updator}
        </if>
        WHERE 1 = 1 
            <if test=" tripId != null "><!-- 自增id -->
                AND trip_id = #{tripId}
            </if>
    </update>
    <!-- 逻辑删除一条数据 -->
    <delete id='toDelete' parameterType='STripDBO'>
        UPDATE s_trip SET ddd='1', update_time = #{updateTime}, uu2 = #{uu2} WHERE update_time = #{updateTime}
            <if test=" tripId != null "><!-- 自增id -->
                AND trip_id = #{tripId}
            </if>
    </delete>
    <!-- 物理删除一条数据 -->
    <delete id='doDelete' parameterType='STripDBO'>
        DELETE FROM s_trip WHERE trip_id = #{tripId}
    </delete>
    <!-- 查询一条数据  -->
    <select id='doRead' parameterType='STripDBO' resultType='STripDBO'>
        SELECT <include refid='tableColumns'/> FROM s_trip WHERE 1 = 1
            <if test=" tripId != null "><!-- 自增id -->
                AND trip_id = #{tripId}
            </if>
    </select>
    <select id='doSelectPageBytid' parameterType='STripDBO' resultType='com.mcookies.qxy.common.STrip.STripPVO'>
       SELECT
			a.trip_id,
			a.content,
			a.date,
			b.teacher_name
		FROM
			s_trip a
		LEFT JOIN u_teacher b ON a.tid = b.tid
		<where>
			<if test="sid != null">
				and a.sid = #{sid}
			</if>
			<if test="tid != null">
				and a.tid = #{tid}
			</if>
			<if test="date != null">
				and a.date = #{date}
			</if>		
		</where>
    </select>
</mapper>
