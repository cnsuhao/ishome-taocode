<controls:ChildWindow x:Class="JSS.Common.Message.ErrorMessage"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="150" 
           Title="异常" FontSize="15">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button x:Name="OKButton" Content="确定" FontSize="12" Click="OKButton_Click" Width="100" Height="25" HorizontalAlignment="Right" Margin="0,12,139,0" Grid.Row="1" />
        <Image Source="/JSS.Image;component/message/error.png" Height="48" HorizontalAlignment="Left" Margin="10,10,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="48" />
        <TextBox IsReadOnly="True" AllowDrop="True" VerticalScrollBarVisibility="Auto" Name="MessageText" Foreground="Black" VerticalAlignment="Top" HorizontalAlignment="Right" TextAlignment="Left" Height="60" Width="302" Text="MMMMMMMMM:这是一条异常信息" Margin="0,5,12,0" />
        <!--<TextBlock Name="ExceptionText" VerticalAlignment="Top" HorizontalAlignment="Right" TextAlignment="Left" Height="29" Width="302" Text="" Margin="0,35,12,0" />-->
    </Grid>
</controls:ChildWindow>