        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button x:Name="OKButton" Content="确定" Click="OKButton_Click" Width="100" Height="25" FontSize="12" HorizontalAlignment="Right" Margin="0,12,139,0" Grid.Row="1" />
        <Image Source="/JSS.Image;component/message/info.png" Height="48" HorizontalAlignment="Left" Margin="10,10,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="48" />
        <TextBox IsReadOnly="True" AllowDrop="True" VerticalScrollBarVisibility="Auto" Name="MessageText" VerticalAlignment="Top" HorizontalAlignment="Right" TextAlignment="Left"   Height="56" Width="302" Text="这是一条提示信息" Margin="0,5,3,0" />
    </Grid>
