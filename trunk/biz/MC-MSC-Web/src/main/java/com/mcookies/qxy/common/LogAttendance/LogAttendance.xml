<?xml version='1.0' encoding='UTF-8' ?> 
<!DOCTYPE mapper
    PUBLIC '-//mybatis.org//DTD Dao 3.0//EN' 
    'http://mybatis.org/dtd/mybatis-3-mapper.dtd' >
<!-- 考勤日志表 -->
<!-- 需要和DAO保持完全路径一致 -->
<mapper namespace='com.mcookies.qxy.common.LogAttendance.LogAttendanceDao'>
    <!-- 表字段信息  -->
    <sql id='tableColumns'>
        id,rfid,device_id,mark_time,flag,source_json,create_time,creator,update_time,updator
    </sql>

    <!-- 根据条件更新所有记录 -->
    <update id='doUpdateAll' parameterType='LogAttendanceDBO'>
        UPDATE log_attendance SET update_time = #{updateTime} <!-- 更新时间、更新者 -->
        <if test=" id != null and id !='' "><!-- 自增id -->
            ,id = #{id}
        </if>
        <if test=" rfid != null and rfid !='' "><!-- 学生卡id -->
            ,rfid = #{rfid}
        </if>
        <if test=" deviceId != null and deviceId !='' "><!-- 学校设备id -->
            ,device_id = #{deviceId}
        </if>
        <if test=" markTime != null and markTime !='' "><!-- 打卡时间 -->
            ,mark_time = #{markTime}
        </if>
        <if test=" flag != null and flag !='' "><!-- 行为状态 -->
            ,flag = #{flag}
        </if>
        <if test=" sourceJson != null and sourceJson !='' "><!-- 接收原文日志json -->
            ,source_json = #{sourceJson}
        </if>
        <if test=" createTime != null and createTime !='' "><!-- 创建时间 -->
            ,create_time = #{createTime}
        </if>
        <if test=" creator != null and creator !='' "><!-- 创建者 -->
            ,creator = #{creator}
        </if>
        <if test=" updator != null and updator !='' "><!-- 最后更新者 -->
            ,updator = #{updator}
        </if>
        WHERE 1 = 1 
            <if test=" id != null and id !='' "><!-- 自增id -->
                AND id = #{id}
            </if>
            <if test=" rfid != null and rfid !='' "><!-- 学生卡id -->
                AND rfid = #{rfid}
            </if>
            <if test=" deviceId != null and deviceId !='' "><!-- 学校设备id -->
                AND device_id = #{deviceId}
            </if>
            <if test=" markTime != null and markTime !='' "><!-- 打卡时间 -->
                AND mark_time = #{markTime}
            </if>
            <if test=" flag != null and flag !='' "><!-- 行为状态 -->
                AND flag = #{flag}
            </if>
            <if test=" sourceJson != null and sourceJson !='' "><!-- 接收原文日志json -->
                AND source_json = #{sourceJson}
            </if>
            <if test=" createTime != null and createTime !='' "><!-- 创建时间 -->
                AND create_time = #{createTime}
            </if>
            <if test=" creator != null and creator !='' "><!-- 创建者 -->
                AND creator = #{creator}
            </if>
            <if test=" updateTime != null and updateTime !='' "><!-- 更新时间 -->
                AND update_time = #{updateTime}
            </if>
            <if test=" updator != null and updator !='' "><!-- 最后更新者 -->
                AND updator = #{updator}
            </if>
    </update>
    <!-- 查询分页数据信息  -->
    <select id='doSelectPage' parameterType='LogAttendanceDBO' resultType='LogAttendanceDBO'>
        SELECT <include refid='tableColumns'/> FROM log_attendance
        WHERE 1 = 1 
        <if test=" id != null and id !='' "><!-- 自增id -->
            AND id = #{id}
        </if>
        <if test=" rfid != null and rfid !='' "><!-- 学生卡id -->
            AND rfid = #{rfid}
        </if>
        <if test=" deviceId != null and deviceId !='' "><!-- 学校设备id -->
            AND device_id = #{deviceId}
        </if>
        <if test=" markTime != null and markTime !='' "><!-- 打卡时间 -->
            AND mark_time = #{markTime}
        </if>
        <if test=" flag != null and flag !='' "><!-- 行为状态 -->
            AND flag = #{flag}
        </if>
        <if test=" sourceJson != null and sourceJson !='' "><!-- 接收原文日志json -->
            AND source_json = #{sourceJson}
        </if>
        <if test=" createTime != null and createTime !='' "><!-- 创建时间 -->
            AND create_time = #{createTime}
        </if>
        <if test=" creator != null and creator !='' "><!-- 创建者 -->
            AND creator = #{creator}
        </if>
        <if test=" updateTime != null and updateTime !='' "><!-- 更新时间 -->
            AND update_time = #{updateTime}
        </if>
        <if test=" updator != null and updator !='' "><!-- 最后更新者 -->
            AND updator = #{updator}
        </if>
    </select>

    <!-- 插入一条数据 -->
    <insert id='doInsert' parameterType='LogAttendanceDBO'>
        INSERT INTO log_attendance
          ( <include refid='tableColumns'/>) 
        VALUES 
          ( #{id},#{rfid},#{deviceId},#{markTime},#{flag},#{sourceJson},#{createTime},#{creator},#{updateTime},#{updator} )
    </insert>
    <!-- 修改一条数据 -->
    <update id='doUpdate' parameterType='LogAttendanceDBO'>
        UPDATE log_attendance SET update_time = #{updateTime} <!-- 更新时间、更新者 -->
        <if test=" id != null and id !='' "><!-- 自增id -->
            ,id = #{id}
        </if>
        <if test=" rfid != null and rfid !='' "><!-- 学生卡id -->
            ,rfid = #{rfid}
        </if>
        <if test=" deviceId != null and deviceId !='' "><!-- 学校设备id -->
            ,device_id = #{deviceId}
        </if>
        <if test=" markTime != null and markTime !='' "><!-- 打卡时间 -->
            ,mark_time = #{markTime}
        </if>
        <if test=" flag != null and flag !='' "><!-- 行为状态 -->
            ,flag = #{flag}
        </if>
        <if test=" sourceJson != null and sourceJson !='' "><!-- 接收原文日志json -->
            ,source_json = #{sourceJson}
        </if>
        <if test=" createTime != null and createTime !='' "><!-- 创建时间 -->
            ,create_time = #{createTime}
        </if>
        <if test=" creator != null and creator !='' "><!-- 创建者 -->
            ,creator = #{creator}
        </if>
        <if test=" updator != null and updator !='' "><!-- 最后更新者 -->
            ,updator = #{updator}
        </if>
        WHERE 1 = 1 
            <if test=" id != null and id !='' "><!-- 自增id -->
                AND id = #{id}
            </if>
    </update>
    <!-- 逻辑删除一条数据 -->
    <delete id='toDelete' parameterType='LogAttendanceDBO'>
        UPDATE log_attendance SET ddd='1', update_time = #{updateTime}, uu2 = #{uu2} WHERE update_time = #{updateTime}
            <if test=" id != null and id !='' "><!-- 自增id -->
                AND id = #{id}
            </if>
    </delete>
    <!-- 物理删除一条数据 -->
    <delete id='doDelete' parameterType='LogAttendanceDBO'>
        DELETE FROM log_attendance WHERE update_time = #{updateTime}
            <if test=" id != null and id !='' "><!-- 自增id -->
                AND id = #{id}
            </if>
    </delete>
    <!-- 查询一条数据  -->
    <select id='doRead' parameterType='LogAttendanceDBO' resultType='LogAttendanceDBO'>
        SELECT <include refid='tableColumns'/> FROM log_attendance WHERE 1 = 1
            <if test=" id != null and id !='' "><!-- 自增id -->
                AND id = #{id}
            </if>
    </select>

</mapper>
