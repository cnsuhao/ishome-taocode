<?xml version='1.0' encoding='UTF-8' ?> 
<!DOCTYPE mapper
    PUBLIC '-//mybatis.org//DTD Dao 3.0//EN' 
    'http://mybatis.org/dtd/mybatis-3-mapper.dtd' >
<!-- 教工标签表 -->
<!-- 需要和DAO保持完全路径一致 -->
<mapper namespace='com.mcookies.qxy.common.SLabel.SLabelDao'>
    <!-- 表字段信息  -->
    <sql id='tableColumns'>
        label_id,sid,label_name,is_use,create_time,creator,update_time,updator
    </sql>

    <!-- 根据条件更新所有记录 -->
    <update id='doUpdateAll' parameterType='SLabelDBO'>
        UPDATE s_label SET update_time = #{updateTime} <!-- 更新时间、更新者 -->
        <if test=" labelId != null "><!-- 教工标签id -->
            ,label_id = #{labelId}
        </if>
        <if test=" sid != null "><!-- 学校id -->
            ,sid = #{sid}
        </if>
        <if test=" labelName != null "><!-- 教工标签名称 -->
            ,label_name = #{labelName}
        </if>
        <if test=" isUse != null "><!-- 是否启用 -->
            ,is_use = #{isUse}
        </if>
        <if test=" createTime != null "><!-- 创建时间 -->
            ,create_time = #{createTime}
        </if>
        <if test=" creator != null "><!-- 创建者 -->
            ,creator = #{creator}
        </if>
        <if test=" updator != null "><!-- 最后更新者 -->
            ,updator = #{updator}
        </if>
        WHERE 1 = 1 
            <if test=" labelId != null "><!-- 教工标签id -->
                AND label_id = #{labelId}
            </if>
            <if test=" sid != null "><!-- 学校id -->
                AND sid = #{sid}
            </if>
            <if test=" labelName != null "><!-- 教工标签名称 -->
                AND label_name = #{labelName}
            </if>
            <if test=" isUse != null "><!-- 是否启用 -->
                AND is_use = #{isUse}
            </if>
            <if test=" createTime != null "><!-- 创建时间 -->
                AND create_time = #{createTime}
            </if>
            <if test=" creator != null "><!-- 创建者 -->
                AND creator = #{creator}
            </if>
            <if test=" updateTime != null "><!-- 更新时间 -->
                AND update_time = #{updateTime}
            </if>
            <if test=" updator != null "><!-- 最后更新者 -->
                AND updator = #{updator}
            </if>
    </update>
    <!-- 查询分页数据信息  -->
    <select id='doSelectPage' parameterType='SLabelDBO' resultType='SLabelDBO'>
        SELECT <include refid='tableColumns'/> FROM s_label
        WHERE 1 = 1 
        <if test=" labelId != null "><!-- 教工标签id -->
            AND label_id = #{labelId}
        </if>
        <if test=" sid != null "><!-- 学校id -->
            AND sid = #{sid}
        </if>
        <if test=" labelName != null "><!-- 教工标签名称 -->
            AND label_name = #{labelName}
        </if>
        <if test=" isUse != null "><!-- 是否启用 -->
            AND is_use = #{isUse}
        </if>
        <if test=" createTime != null "><!-- 创建时间 -->
            AND create_time = #{createTime}
        </if>
        <if test=" creator != null "><!-- 创建者 -->
            AND creator = #{creator}
        </if>
        <if test=" updateTime != null "><!-- 更新时间 -->
            AND update_time = #{updateTime}
        </if>
        <if test=" updator != null "><!-- 最后更新者 -->
            AND updator = #{updator}
        </if>
    </select>

    <!-- 插入一条数据 -->
    <insert id='doInsert' parameterType='SLabelDBO'>
        INSERT INTO s_label
          ( <include refid='tableColumns'/>) 
        VALUES 
          ( #{labelId},#{sid},#{labelName},#{isUse},#{createTime},#{creator},#{updateTime},#{updator} )
    </insert>
    <!-- 修改一条数据 -->
    <update id='doUpdate' parameterType='SLabelDBO'>
        UPDATE s_label SET update_time = #{updateTime} <!-- 更新时间、更新者 -->
        <if test=" labelId != null "><!-- 教工标签id -->
            ,label_id = #{labelId}
        </if>
        <if test=" sid != null "><!-- 学校id -->
            ,sid = #{sid}
        </if>
        <if test=" labelName != null "><!-- 教工标签名称 -->
            ,label_name = #{labelName}
        </if>
        <if test=" isUse != null "><!-- 是否启用 -->
            ,is_use = #{isUse}
        </if>
        <if test=" createTime != null "><!-- 创建时间 -->
            ,create_time = #{createTime}
        </if>
        <if test=" creator != null "><!-- 创建者 -->
            ,creator = #{creator}
        </if>
        <if test=" updator != null "><!-- 最后更新者 -->
            ,updator = #{updator}
        </if>
        WHERE 1 = 1 
            <if test=" labelId != null "><!-- 教工标签id -->
                AND label_id = #{labelId}
            </if>
    </update>
    <!-- 逻辑删除一条数据 -->
    <delete id='toDelete' parameterType='SLabelDBO'>
        UPDATE s_label SET ddd='1', update_time = #{updateTime}, uu2 = #{uu2} WHERE update_time = #{updateTime}
            <if test=" labelId != null "><!-- 教工标签id -->
                AND label_id = #{labelId}
            </if>
    </delete>
    <!-- 物理删除一条数据 -->
    <delete id='doDelete' parameterType='SLabelDBO'>
        DELETE FROM s_label WHERE label_id = #{labelId}
    </delete>
    <!-- 查询一条数据  -->
    <select id='doRead' parameterType='SLabelDBO' resultType='SLabelDBO'>
        SELECT <include refid='tableColumns'/> FROM s_label WHERE 1 = 1
            <if test=" labelId != null "><!-- 教工标签id -->
                AND label_id = #{labelId}
            </if>
    </select>
    <!-- 查询教工关联的标签 -->
    <select id="doselectTeacherLabel" parameterType="UTeacherDBO" resultType="SLabelDBO">
	SELECT
		a.label_id,
	  a.label_name
	FROM
		s_label a,
		s_label_teacher b
	WHERE
		a.label_id = b.label_id
		and b.tid = #{tid}
    </select>

</mapper>
