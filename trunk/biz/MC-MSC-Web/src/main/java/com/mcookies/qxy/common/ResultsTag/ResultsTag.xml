<?xml version='1.0' encoding='UTF-8' ?> 
<!DOCTYPE mapper
    PUBLIC '-//mybatis.org//DTD Dao 3.0//EN' 
    'http://mybatis.org/dtd/mybatis-3-mapper.dtd' >
<!-- 成绩标签表 -->
<!-- 需要和DAO保持完全路径一致 -->
<mapper namespace='com.mcookies.qxy.common.ResultsTag.ResultsTagDao'>
    <!-- 表字段信息  -->
    <sql id='tableColumns'>
        results_tag_id,sid,term_id,results_tag_name,results_tag_explain,start_time,end_time,is_use,create_time,creator,update_time,updator
    </sql>

    <!-- 根据条件更新所有记录 -->
    <update id='doUpdateAll' parameterType='ResultsTagDBO'>
        UPDATE results_tag SET update_time = #{updateTime} <!-- 更新时间、更新者 -->
        <if test=" resultsTagId != null and resultsTagId !='' "><!-- 成绩标签id -->
            ,results_tag_id = #{resultsTagId}
        </if>
        <if test=" sid != null and sid !='' "><!-- 学校id -->
            ,sid = #{sid}
        </if>
        <if test=" termId != null and termId !='' "><!-- 学期id -->
            ,term_id = #{termId}
        </if>
        <if test=" resultsTagName != null and resultsTagName !='' "><!-- 成绩标签名称 -->
            ,results_tag_name = #{resultsTagName}
        </if>
        <if test=" resultsTagExplain != null and resultsTagExplain !='' "><!-- 成绩标签说明 -->
            ,results_tag_explain = #{resultsTagExplain}
        </if>
        <if test=" startTime != null and startTime !='' "><!-- 考试开始时间 -->
            ,start_time = #{startTime}
        </if>
        <if test=" endTime != null and endTime !='' "><!-- 考试结束时间 -->
            ,end_time = #{endTime}
        </if>
        <if test=" isUse != null and isUse !='' "><!-- 是否启用 -->
            ,is_use = #{isUse}
        </if>
        <if test=" createTime != null and createTime !='' "><!-- 创建时间 -->
            ,create_time = #{createTime}
        </if>
        <if test=" creator != null and creator !='' "><!-- 创建者 -->
            ,creator = #{creator}
        </if>
        <if test=" updator != null and updator !='' "><!-- 最后更新者 -->
            ,updator = #{updator}
        </if>
        WHERE 1 = 1 
            <if test=" resultsTagId != null and resultsTagId !='' "><!-- 成绩标签id -->
                AND results_tag_id = #{resultsTagId}
            </if>
            <if test=" sid != null and sid !='' "><!-- 学校id -->
                AND sid = #{sid}
            </if>
            <if test=" termId != null and termId !='' "><!-- 学期id -->
                AND term_id = #{termId}
            </if>
            <if test=" resultsTagName != null and resultsTagName !='' "><!-- 成绩标签名称 -->
                AND results_tag_name = #{resultsTagName}
            </if>
            <if test=" resultsTagExplain != null and resultsTagExplain !='' "><!-- 成绩标签说明 -->
                AND results_tag_explain = #{resultsTagExplain}
            </if>
            <if test=" startTime != null and startTime !='' "><!-- 考试开始时间 -->
                AND start_time = #{startTime}
            </if>
            <if test=" endTime != null and endTime !='' "><!-- 考试结束时间 -->
                AND end_time = #{endTime}
            </if>
            <if test=" isUse != null and isUse !='' "><!-- 是否启用 -->
                AND is_use = #{isUse}
            </if>
            <if test=" createTime != null and createTime !='' "><!-- 创建时间 -->
                AND create_time = #{createTime}
            </if>
            <if test=" creator != null and creator !='' "><!-- 创建者 -->
                AND creator = #{creator}
            </if>
            <if test=" updateTime != null and updateTime !='' "><!-- 更新时间 -->
                AND update_time = #{updateTime}
            </if>
            <if test=" updator != null and updator !='' "><!-- 最后更新者 -->
                AND updator = #{updator}
            </if>
    </update>
    <!-- 查询分页数据信息  -->
    <select id='doSelectPage' parameterType='ResultsTagDBO' resultType='ResultsTagDBO'>
        SELECT <include refid='tableColumns'/> FROM results_tag
        WHERE 1 = 1 
        <if test=" resultsTagId != null and resultsTagId !='' "><!-- 成绩标签id -->
            AND results_tag_id = #{resultsTagId}
        </if>
        <if test=" sid != null and sid !='' "><!-- 学校id -->
            AND sid = #{sid}
        </if>
        <if test=" termId != null and termId !='' "><!-- 学期id -->
            AND term_id = #{termId}
        </if>
        <if test=" resultsTagName != null and resultsTagName !='' "><!-- 成绩标签名称 -->
            AND results_tag_name = #{resultsTagName}
        </if>
        <if test=" resultsTagExplain != null and resultsTagExplain !='' "><!-- 成绩标签说明 -->
            AND results_tag_explain = #{resultsTagExplain}
        </if>
        <if test=" startTime != null and startTime !='' "><!-- 考试开始时间 -->
            AND start_time = #{startTime}
        </if>
        <if test=" endTime != null and endTime !='' "><!-- 考试结束时间 -->
            AND end_time = #{endTime}
        </if>
        <if test=" isUse != null and isUse !='' "><!-- 是否启用 -->
            AND is_use = #{isUse}
        </if>
        <if test=" createTime != null and createTime !='' "><!-- 创建时间 -->
            AND create_time = #{createTime}
        </if>
        <if test=" creator != null and creator !='' "><!-- 创建者 -->
            AND creator = #{creator}
        </if>
        <if test=" updateTime != null and updateTime !='' "><!-- 更新时间 -->
            AND update_time = #{updateTime}
        </if>
        <if test=" updator != null and updator !='' "><!-- 最后更新者 -->
            AND updator = #{updator}
        </if>
    </select>

    <!-- 插入一条数据 -->
    <insert id='doInsert' parameterType='ResultsTagDBO'>
        INSERT INTO results_tag
          ( <include refid='tableColumns'/>) 
        VALUES 
          ( #{resultsTagId},#{sid},#{termId},#{resultsTagName},#{resultsTagExplain},#{startTime},#{endTime},#{isUse},#{createTime},#{creator},#{updateTime},#{updator} )
    </insert>
    <!-- 修改一条数据 -->
    <update id='doUpdate' parameterType='ResultsTagDBO'>
        UPDATE results_tag SET update_time = #{updateTime} <!-- 更新时间、更新者 -->
        <if test=" resultsTagId != null and resultsTagId !='' "><!-- 成绩标签id -->
            ,results_tag_id = #{resultsTagId}
        </if>
        <if test=" sid != null and sid !='' "><!-- 学校id -->
            ,sid = #{sid}
        </if>
        <if test=" termId != null and termId !='' "><!-- 学期id -->
            ,term_id = #{termId}
        </if>
        <if test=" resultsTagName != null and resultsTagName !='' "><!-- 成绩标签名称 -->
            ,results_tag_name = #{resultsTagName}
        </if>
        <if test=" resultsTagExplain != null and resultsTagExplain !='' "><!-- 成绩标签说明 -->
            ,results_tag_explain = #{resultsTagExplain}
        </if>
        <if test=" startTime != null and startTime !='' "><!-- 考试开始时间 -->
            ,start_time = #{startTime}
        </if>
        <if test=" endTime != null and endTime !='' "><!-- 考试结束时间 -->
            ,end_time = #{endTime}
        </if>
        <if test=" isUse != null and isUse !='' "><!-- 是否启用 -->
            ,is_use = #{isUse}
        </if>
        <if test=" createTime != null and createTime !='' "><!-- 创建时间 -->
            ,create_time = #{createTime}
        </if>
        <if test=" creator != null and creator !='' "><!-- 创建者 -->
            ,creator = #{creator}
        </if>
        <if test=" updator != null and updator !='' "><!-- 最后更新者 -->
            ,updator = #{updator}
        </if>
        WHERE 1 = 1 
            <if test=" resultsTagId != null and resultsTagId !='' "><!-- 成绩标签id -->
                AND results_tag_id = #{resultsTagId}
            </if>
    </update>
    <!-- 逻辑删除一条数据 -->
    <delete id='toDelete' parameterType='ResultsTagDBO'>
        UPDATE results_tag SET ddd='1', update_time = #{updateTime}, uu2 = #{uu2} WHERE update_time = #{updateTime}
            <if test=" resultsTagId != null and resultsTagId !='' "><!-- 成绩标签id -->
                AND results_tag_id = #{resultsTagId}
            </if>
    </delete>
    <!-- 物理删除一条数据 -->
    <delete id='doDelete' parameterType='ResultsTagDBO'>
        DELETE FROM results_tag WHERE update_time = #{updateTime}
            <if test=" resultsTagId != null and resultsTagId !='' "><!-- 成绩标签id -->
                AND results_tag_id = #{resultsTagId}
            </if>
    </delete>
    <!-- 查询一条数据  -->
    <select id='doRead' parameterType='ResultsTagDBO' resultType='ResultsTagDBO'>
        SELECT <include refid='tableColumns'/> FROM results_tag WHERE 1 = 1
            <if test=" resultsTagId != null and resultsTagId !='' "><!-- 成绩标签id -->
                AND results_tag_id = #{resultsTagId}
            </if>
    </select>
    
    <!--  根据学期Id以及成绩标签名称获取德育班级评分信息 -->
	<select id="doSelectDataList" parameterType="ResultsTagDBO" resultType="ResultsTagDBO">	
	SELECT
	a.results_tag_id,
	a.results_tag_name,
	a.results_tag_explain,
	a.start_time,
	a.end_time,
	a.create_time
	FROM
	results_tag AS a
	LEFT JOIN s_term AS b ON a.term_id = b.term_id
	WHERE 1 = 1 
	<if test=" termId != null and termId !='' "><!-- 学期id -->
	    AND a.term_id = #{termId}
	</if>
	<if test=" resultsTagName != null and resultsTagName !='' "><!-- 成绩标签名称 -->
	    AND a.results_tag_name LIKE '%${resultsTagName}%'
	</if>
	</select>

</mapper>
