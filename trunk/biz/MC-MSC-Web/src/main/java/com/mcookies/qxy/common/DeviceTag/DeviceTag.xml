        <if test=" creator != null and creator !='' "><!-- 创建者 -->
            ,creator = #{creator}
        </if>
        <if test=" updator != null and updator !='' "><!-- 最后更新者 -->
            ,updator = #{updator}
        </if>
        WHERE 1 = 1 
            <if test=" id != null and id !='' "><!-- 自增id -->
                AND id = #{id}
            </if>
    </update>
    <!-- 逻辑删除一条数据 -->
    <delete id='toDelete' parameterType='DeviceTagDBO'>
        UPDATE device_tag SET ddd='1', update_time = #{updateTime}, uu2 = #{uu2} WHERE update_time = #{updateTime}
            <if test=" id != null and id !='' "><!-- 自增id -->
                AND id = #{id}
            </if>
    </delete>
    <!-- 物理删除一条数据 -->
    <delete id='doDelete' parameterType='DeviceTagDBO'>
        DELETE FROM device_tag WHERE update_time = #{updateTime}
            <if test=" id != null and id !='' "><!-- 自增id -->
                AND id = #{id}
            </if>
    </delete>
    <!-- 查询一条数据  -->
    <select id='doRead' parameterType='DeviceTagDBO' resultType='DeviceTagDBO'>
        SELECT <include refid='tableColumns'/> FROM device_tag WHERE 1 = 1
            <if test=" id != null and id !='' "><!-- 自增id -->
                AND id = #{id}
            </if>
    </select>
	<!-- 设备标签查询接口 -->
	<select id="doSelectDevice" parameterType="java.util.Map" resultMap="resultMap1">
		SELECT
			device_id,
			device_name,
			a.username,
			a.`password`,
			b.school_name
		FROM
			device_tag a,
			school b
		<where>
			and a.sid = b.sid
			<if test="sid != null and sid != '' ">
				and a.sid = #{sid}
			</if>
			<if test="deviceId != null and deviceId != '' ">
				and a.device_id = #{deviceId}
			</if>
		</where>
	</select>
</mapper>
