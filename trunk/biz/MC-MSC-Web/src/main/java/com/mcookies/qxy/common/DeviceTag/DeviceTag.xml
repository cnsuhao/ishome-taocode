<?xml version='1.0' encoding='UTF-8' ?> 
<!DOCTYPE mapper
    PUBLIC '-//mybatis.org//DTD Dao 3.0//EN' 
    'http://mybatis.org/dtd/mybatis-3-mapper.dtd' >
<!-- 设备标签表 -->
<!-- 需要和DAO保持完全路径一致 -->
<mapper namespace='com.mcookies.qxy.common.DeviceTag.DeviceTagDao'>
    <!-- 表字段信息  -->
    <sql id='tableColumns'>
        id,sid,device_name,device_id,username,password,last_login_time,is_use,create_time,creator,update_time,updator
    </sql>
	<resultMap type="com.mcookies.qxy.common.DeviceTag.DeviceTagPVO" id="resultMap1">
		<result column="school_name" property="schoolName"/>
		<result column="device_id" property="deviceId"/>
		<result column="device_name" property="deviceName"/>
		<result column="username" property="username"/>
		<result column="password" property="password"/>
	</resultMap>
    <!-- 根据条件更新所有记录 -->
    <update id='doUpdateAll' parameterType='DeviceTagDBO'>
        UPDATE device_tag SET update_time = #{updateTime} <!-- 更新时间、更新者 -->
        <if test=" id != null and id !='' "><!-- 自增id -->
            ,id = #{id}
        </if>
        <if test=" sid != null and sid !='' "><!-- 学校id -->
            ,sid = #{sid}
        </if>
        <if test=" deviceName != null and deviceName !='' "><!-- 地点名字 -->
            ,device_name = #{deviceName}
        </if>
        <if test=" deviceId != null and deviceId !='' "><!-- 学校设备id -->
            ,device_id = #{deviceId}
        </if>
        <if test=" username != null and username !='' "><!-- 设备账号 -->
            ,username = #{username}
        </if>
        <if test=" password != null and password !='' "><!-- 设备密码 -->
            ,password = #{password}
        </if>
        <if test=" lastLoginTime != null and lastLoginTime !='' "><!-- 最近一次登陆时间 -->
            ,last_login_time = #{lastLoginTime}
        </if>
        <if test=" isUse != null and isUse !='' "><!-- 是否启用 -->
            ,is_use = #{isUse}
        </if>
        <if test=" createTime != null and createTime !='' "><!-- 创建时间 -->
            ,create_time = #{createTime}
        </if>
        <if test=" creator != null and creator !='' "><!-- 创建者 -->
            ,creator = #{creator}
        </if>
        <if test=" updator != null and updator !='' "><!-- 最后更新者 -->
            ,updator = #{updator}
        </if>
        WHERE 1 = 1 
            <if test=" id != null and id !='' "><!-- 自增id -->
                AND id = #{id}
            </if>
            <if test=" sid != null and sid !='' "><!-- 学校id -->
                AND sid = #{sid}
            </if>
            <if test=" deviceName != null and deviceName !='' "><!-- 地点名字 -->
                AND device_name = #{deviceName}
            </if>
            <if test=" deviceId != null and deviceId !='' "><!-- 学校设备id -->
                AND device_id = #{deviceId}
            </if>
            <if test=" username != null and username !='' "><!-- 设备账号 -->
                AND username = #{username}
            </if>
            <if test=" password != null and password !='' "><!-- 设备密码 -->
                AND password = #{password}
            </if>
            <if test=" lastLoginTime != null and lastLoginTime !='' "><!-- 最近一次登陆时间 -->
                AND last_login_time = #{lastLoginTime}
            </if>
            <if test=" isUse != null and isUse !='' "><!-- 是否启用 -->
                AND is_use = #{isUse}
            </if>
            <if test=" createTime != null and createTime !='' "><!-- 创建时间 -->
                AND create_time = #{createTime}
            </if>
            <if test=" creator != null and creator !='' "><!-- 创建者 -->
                AND creator = #{creator}
            </if>
            <if test=" updateTime != null and updateTime !='' "><!-- 更新时间 -->
                AND update_time = #{updateTime}
            </if>
            <if test=" updator != null and updator !='' "><!-- 最后更新者 -->
                AND updator = #{updator}
            </if>
    </update>
    <!-- 查询分页数据信息  -->
    <select id='doSelectPage' parameterType='DeviceTagDBO' resultType='DeviceTagDBO'>
        SELECT <include refid='tableColumns'/> FROM device_tag
        WHERE 1 = 1 
        <if test=" id != null and id !='' "><!-- 自增id -->
            AND id = #{id}
        </if>
        <if test=" sid != null and sid !='' "><!-- 学校id -->
            AND sid = #{sid}
        </if>
        <if test=" deviceName != null and deviceName !='' "><!-- 地点名字 -->
            AND device_name = #{deviceName}
        </if>
        <if test=" deviceId != null and deviceId !='' "><!-- 学校设备id -->
            AND device_id = #{deviceId}
        </if>
        <if test=" username != null and username !='' "><!-- 设备账号 -->
            AND username = #{username}
        </if>
        <if test=" password != null and password !='' "><!-- 设备密码 -->
            AND password = #{password}
        </if>
        <if test=" lastLoginTime != null and lastLoginTime !='' "><!-- 最近一次登陆时间 -->
            AND last_login_time = #{lastLoginTime}
        </if>
        <if test=" isUse != null and isUse !='' "><!-- 是否启用 -->
            AND is_use = #{isUse}
        </if>
        <if test=" createTime != null and createTime !='' "><!-- 创建时间 -->
            AND create_time = #{createTime}
        </if>
        <if test=" creator != null and creator !='' "><!-- 创建者 -->
            AND creator = #{creator}
        </if>
        <if test=" updateTime != null and updateTime !='' "><!-- 更新时间 -->
            AND update_time = #{updateTime}
        </if>
        <if test=" updator != null and updator !='' "><!-- 最后更新者 -->
            AND updator = #{updator}
        </if>
    </select>

    <!-- 插入一条数据 -->
    <insert id='doInsert' parameterType='DeviceTagDBO'>
        INSERT INTO device_tag
          ( <include refid='tableColumns'/>) 
        VALUES 
          ( #{id},#{sid},#{deviceName},#{deviceId},#{username},#{password},#{lastLoginTime},#{isUse},#{createTime},#{creator},#{updateTime},#{updator} )
    </insert>
    <!-- 修改一条数据 -->
    <update id='doUpdate' parameterType='DeviceTagDBO'>
        UPDATE device_tag SET update_time = #{updateTime} <!-- 更新时间、更新者 -->
        <if test=" id != null and id !='' "><!-- 自增id -->
            ,id = #{id}
        </if>
        <if test=" sid != null and sid !='' "><!-- 学校id -->
            ,sid = #{sid}
        </if>
        <if test=" deviceName != null and deviceName !='' "><!-- 地点名字 -->
            ,device_name = #{deviceName}
        </if>
        <if test=" deviceId != null and deviceId !='' "><!-- 学校设备id -->
            ,device_id = #{deviceId}
        </if>
        <if test=" username != null and username !='' "><!-- 设备账号 -->
            ,username = #{username}
        </if>
        <if test=" password != null and password !='' "><!-- 设备密码 -->
            ,password = #{password}
        </if>
        <if test=" lastLoginTime != null and lastLoginTime !='' "><!-- 最近一次登陆时间 -->
