<UserControl x:Class="FPM.Framework.SF.SF0301"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="42" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Rectangle Stroke="Black" StrokeThickness="1" Margin="4" />
            <Button Content="个人头像" Margin="5" ToolTip="点击返回到首页" Name="Home" Click="Home_Click" />
        </Grid>
        <Grid Grid.Row="1">
            <Button Content="设置" Height="36" HorizontalAlignment="Center" Name="Seeting" VerticalAlignment="Top" Width="36" Margin="48,0,5,0" ToolTip="设定个人习惯" Click="Seeting_Click" />
            <Button Content="菜单" Height="36" HorizontalAlignment="Center" Name="Menu" VerticalAlignment="Top" Width="36" Margin="5,0,48,0" ToolTip="显示操作菜单" Click="Menu_Click" Background="#FFF52929" />
        </Grid>
    </Grid>
</UserControl>
