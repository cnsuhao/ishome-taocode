<controls:ChildWindow x:Class="JSS.Common.Message.InputMessage"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="150" 
           Title="请输入" FontSize="15">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button x:Name="OKButton" Content="确定" FontSize="12" Click="OKButton_Click" Width="100" Height="25" HorizontalAlignment="Right" Margin="0,12,139,0" Grid.Row="1" />
        <TextBox AllowDrop="True" VerticalScrollBarVisibility="Auto" Height="65" HorizontalAlignment="Left" Margin="0,0,0,0" Name="InputBox" VerticalAlignment="Top" Width="378" />
    </Grid>
</controls:ChildWindow>